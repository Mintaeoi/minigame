<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#EF4A4A"/> <!-- 버튼의 색상 -->
            <corners android:radius="50dp"/> <!-- 코너 반경을 크게 설정 -->
            <stroke android:width="2dp" android:color="#FFD7D7"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#D64242"/> <!-- 버튼의 색상 -->
            <corners android:radius="50dp"/> <!-- 코너 반경을 크게 설정 -->
            <stroke android:width="2dp" android:color="#E0BDBD"/>
        </shape>
    </item>
</selector>