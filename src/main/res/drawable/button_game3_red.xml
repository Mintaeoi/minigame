<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="#EF4A4A"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="20dp"
                android:height="10dp"
                />
            <stroke
                android:width="5dp"
                android:color="#FFCECE"
                />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="#D44242"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="20dp"
                android:height="10dp"
                />
            <stroke
                android:width="5dp"
                android:color="#E0B4B4"
                />

        </shape>
    </item>
</selector>