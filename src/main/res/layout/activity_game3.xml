<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">  <!-- 전체 배경색 변경 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">  <!-- 패딩 추가 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_game3_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="60sp"
                android:gravity="center"
                android:fontFamily="@font/timernum2"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_game3_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timernum"
                android:gravity="center"
                android:text="0점"
                android:textSize="60sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>  <!-- 위 여백 추가 -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_game3_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timernum"
                android:gravity="center"
                android:text="빨강"
                android:textSize="60sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/button_game3_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/button_game3_red"
                android:layout_margin="16dp"/>  <!-- 여백 추가 -->

            <android.widget.Button
                android:id="@+id/button_game3_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:background="@drawable/button_game3_blue"
                android:layout_margin="16dp"/>  <!-- 여백 추가 -->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
