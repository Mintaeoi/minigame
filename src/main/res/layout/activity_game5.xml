<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_game5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성공 확률"
            android:fontFamily="@font/timernum2"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingTop="24dp" />

        <TextView
            android:id="@+id/textView_game5_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timernum2"
            android:gravity="center"
            android:text="95%"
            android:textSize="70sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView_game5_life1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/game5_life"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/imageView_game5_life2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/game5_life"
                android:layout_margin="8dp" />

            <ImageView
                android:id="@+id/imageView_game5_life3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/game5_life"
                android:layout_margin="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_game5_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timernum2"
            android:text="0점"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#FF2222"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView_game5_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성공에 배팅"
                android:fontFamily="@font/timernum2"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal" />

            <android.widget.Button
                android:id="@+id/button_game5_success"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_game5_success"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView_game5_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실패에 배팅"
                android:fontFamily="@font/timernum2"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal" />

            <android.widget.Button
                android:id="@+id/button_game5_fail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_game5_fail"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
