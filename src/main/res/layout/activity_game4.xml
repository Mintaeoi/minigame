<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"> <!-- 패딩 추가 -->

        <!-- 상단 시간 및 점수 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_game4_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="60sp"
                android:gravity="center"
                android:fontFamily="@font/timernum2"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView_game4_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0점"
                android:textSize="60sp"
                android:gravity="center"
                android:fontFamily="@font/timernum"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 색상 텍스트 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_game4_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빨강"
                android:textSize="60sp"
                android:gravity="center"
                android:fontFamily="@font/timernum"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 버튼 4개 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 왼쪽 버튼 레이아웃 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/button_game4_green"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@drawable/button_game3_green"
                    android:layout_margin="20sp"/>

                <android.widget.Button
                    android:id="@+id/button_game4_red"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@drawable/button_game3_red"
                    android:layout_margin="20sp"/>
            </LinearLayout>

            <!-- 오른쪽 버튼 레이아웃 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <android.widget.Button
                    android:id="@+id/button_game4_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@drawable/button_game3_yellow"
                    android:layout_margin="20sp"/>

                <android.widget.Button
                    android:id="@+id/button_game4_blue"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@drawable/button_game3_blue"
                    android:layout_margin="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
